<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.rebcesp.sqlitehelper51.InsertarActivity">
<LinearLayout
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre ciudad"
        android:id="@+id/nombreCiudad"/>
    <EditText

        android:id="@+id/nombreProvincia"
        android:hint="Escribe la provincia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Numero de habitantes"
        android:id="@+id/numeroHabitantes"/>

</LinearLayout>

    <Button

        android:id="@+id/btnGuardar"
        android:text="Guardar"
        android:layout_alignParentEnd="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout"/>



</RelativeLayout>
